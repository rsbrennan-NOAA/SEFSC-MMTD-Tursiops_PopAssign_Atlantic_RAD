tower {
    accessToken = System.getenv('TOWER_ACCESS_TOKEN')
    enabled = true
}

singularity.enabled = true

process {
    executor = 'slurm'
    queue = 'standard'
    errorStrategy = 'retry'
    maxRetries = 3
}

executor {
    name = 'slurm'
    queueSize = 60
}

// Common environment settings
env {
    LC_ALL = "en_US.UTF-8"
    LANG = "en_US.UTF-8"
}

//set profiles for different types of runs
profiles {
    bwamem2 {
        executor {
            name = 'slurm'
            queueSize = 40  // Limit bwa mem jobs as they're resource-intensive and slow
        }
        process {
            withName: bwamem2 {
                cpus = 4
                memory = 40.GB
                time = '12h'
            }
        }
    }
    
    bamstats {
     executor {
         name = 'slurm'
         queueSize = 25
         }
        process {
            withName: BAMSTATS {
		cpus = 1
                memory = 4.GB
                time = { 30.m * task.attempt }
            }
	    withName: MERGE_BAMS {
		cpus = 4
                memory = 16.GB
                time = { 4.h * task.attempt }
            }
        }
    }

    fastqc {
    executor {
        name = 'slurm'
        queueSize = 50
        }
        process {
            withName: fastqc {
                container = 'biocontainers/fastqc:v0.11.9_cv8'
                cpus = 1
                memory = 4.GB
                time = { 30.m * task.attempt }
            }
            
            withName: multiqc {
                container = 'multiqc/multiqc:v1.24.1'
                cpus = 1
                memory = 8.GB
                time = { 30.m * task.attempt }
            }
        }
    }

    fastp {
        executor {
            name = 'slurm'
            queueSize = 40 
        }
        process {
            withName: fastp {
                cpus = 4
                memory = { 2.GB * task.attempt }
                time = { 30.min * task.attempt }
            }
        }
    }
}
